{
  "name": "qe-support",
  "displayName": "QE Support",
  "description": "Quantum ESPRESSO input support",
  "version": "0.0.1",
  "publisher": "wxia529",
  "license": "MIT",
  "icon": "images/icon.svg",
  "keywords": [
    "quantum-espresso",
    "qe",
    "pwscf",
    "input",
    "materials",
    "physics"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wxia529/vscode-qe-support.git"
  },
  "bugs": {
    "url": "https://github.com/wxia529/vscode-qe-support/issues"
  },
  "homepage": "https://github.com/wxia529/vscode-qe-support#readme",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:qe-input"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "qe-input",
        "aliases": [
          "QE Input",
          "Quantum ESPRESSO"
        ],
        "extensions": [
          ".in",
          ".pwi",
          ".pw"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "qe-input",
        "scopeName": "source.qe-input",
        "path": "./syntaxes/qe-input.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "qe-input",
        "path": "./data/snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
